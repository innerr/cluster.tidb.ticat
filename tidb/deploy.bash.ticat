help = deploy tiup cluster name and then set the name to env
abbr = depl|dep|dpl

[arg]
yaml-path|yaml = ''
cluster-name|cluster|name = ''
version|ver|v|V = ''
confirm|cfm = ''

[arg2env]
tidb.tiup.yaml = yaml-path
tidb.cluster = cluster-name
tidb.version = version
tidb.op.confirm = confirm

[env]
tidb.tiup.yaml = read
tidb.cluster|c|C = read
tidb.version|ver|v|V = read
tidb.op.confirm|cfm = read

[dep]
tiup = to deploy cluster
